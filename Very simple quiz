# Very simple quiz
'''
from random import randint


def get_question():
    question = vragen[randint(0, len(vragen) - 1)]
    return question


def get_answer():
    return myDict.get(vraag)


def remove_question(l, item):
    l.remove(item)
    return l


def get_user_answer():
    mijn_antwoord = input(f"\nWelke kleur heeft {vraag}? ")
    return mijn_antwoord


def determine_score():
    global score
    if mijn_antwoord == juiste_antwoord:
        score += 1
        print(f"Dat is juist! Je score is {score}.")
    else:
        print(f"Helaas! Het juiste antwoord was {juiste_antwoord}")


while True:
    myDict = {"de lucht": "blauw", "gras": "groen", "een roos": "rood"}
    vragen = list(myDict.keys())
    antwoorden = list(myDict.values())
    score = 0
    while len(vragen):
        vraag = get_question()
        mijn_antwoord = get_user_answer()
        juiste_antwoord = get_answer()
        determine_score()
        remove_question(vragen, vraag)
    play_again = input(f"\nJe eindscore is {score}. Wil je het nog een keer proberen? (ja/nee): ")
    if play_again.lower() != "ja":
        break
